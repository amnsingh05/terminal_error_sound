{
  "name": "terminal-error-sound",
  "displayName": "Terminal Error Sound",
  "description": "Plays a sound when the integrated terminal exits with a non-zero error code.",
  "version": "0.0.1",
  "publisher": "amansinghdev",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/amnsingh05/terminal_error_sound"
  },
  "bugs": {
    "url": "https://github.com/amnsingh05/terminal_error_sound/issues"
  },
  "homepage": "https://github.com/amnsingh05/terminal_error_sound",
  "keywords": [
    "vscode",
    "terminal",
    "error",
    "sound",
    "notification",
    "developer"
  ],
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Terminal Error Sound",
      "properties": {
        "terminalErrorSound.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable sound when terminal exits with an error."
        },
        "terminalErrorSound.soundType": {
          "type": "string",
          "default": "error.mp3",
          "enum": [
            "error.mp3",
            "alert.mp3",
            "beep.mp3"
          ],
          "description": "Select which built-in sound to play."
        },
        "terminalErrorSound.customSoundPath": {
          "type": "string",
          "default": "",
          "description": "Full file path to a custom sound file. Leave empty to use built-in sound."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "play-sound": "^1.1.6"
  }
}